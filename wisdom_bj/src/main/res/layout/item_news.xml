<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

    <ImageView
        android:id="@+id/iv_new_pic"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:background="@drawable/news_pic_default"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_new_pic"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/iv_new_pic"
        android:maxLines="2"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_pubdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_new_pic"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/iv_new_pic"
        android:maxLines="2"
        android:textSize="14sp"/>
</RelativeLayout>